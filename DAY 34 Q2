#include <iostream>
using namespace std;

int main() 
{
    int t;
    cin>>t;
    while(t--)
    {
        string s;
        cin>>s;
        int n=s.size();
        int i,c;
        for(i=0,c=0;i<n;i++)
        {
            if(s[i]=='<' && s[i+1]=='>')
            c++;
        }
        cout<<c<<endl;
        
    }
	return 0;
}
