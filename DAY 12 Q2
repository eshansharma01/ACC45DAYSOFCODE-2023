#include <iostream>
using namespace std;

int main() 
{
    int t;
    cin>>t;
    while(t--)
    {
        int a,b;
        cin>>a>>b;
        int i,sa=0,sb=0;
        for(i=1;;i++)
        {
            if(i%2!=0)
            {
                sa=sa+i;
                if(sa>a)
                {
                    cout<<"Bob"<<endl;
                    break;
                }
            }
            else
            {
                sb=sb+i;
                if(sb>b)
                {
                    cout<<"Limak"<<endl;
                    break;
                }
                
            }
            
        }
        
    }
	return 0;
}
