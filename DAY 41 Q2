#include <bits/stdc++.h>
using namespace std;
#define POP pop_back
#define MOD 1e7+10
#define PI 3.1415926535897932
#define PB push_back
#define MP make_pair
    
typedef long long int ll;
typedef pair<ll,ll> pll;
typedef map<ll , ll > mll;
typedef vector<ll> V;
#define fori(x) for(ll i=0; i<x; i++)
#define sorta(x) sort(x.begin(),x.end())
#define fora(x) for(auto it : x)
int main(){
int t;
cin>>t;
while(t--){
    ll n;
    cin>>n;
    string s;
    cin>>s;
    ll count =0;
    for(int i=0;i<n-1;i++){
        if(s[i]=='1' && s[i+1]=='0'){
            count++;
        }
    }
    cout<<count<<endl;
    
    
}
    return 0;
}
